{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./",
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"],
      "#/*": ["tests/*"]
    }
  },
  "exclude": ["dist", "node_modules", "infrastructure"]
}